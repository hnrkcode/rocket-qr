{
  "manifest_version": 3,
  "name": "Rocket QR",
  "description": "Lightning-fast URL QR Code Generator",
  "version": "1.0.0",
  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "src/popup.html"
  }
}
